<!DOCTYPE html>
<html>
<head>
    <% include ../partials/home %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.7/dist/css/bootstrap-select.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.7/dist/js/bootstrap-select.min.js"></script>

<!-- (Optional) Latest compiled and minified JavaScript translation files -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.7/dist/js/i18n/defaults-*.min.js"></script>

    <style>
        .container{
            overflow: scroll;
        }

        .row{
            padding: 1%;
        }

        .jumbotron{
            width: 100%;
            height: 100vh;
            background-image: url(https://images.pexels.com/photos/958545/pexels-photo-958545.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
            background-size:cover;
            background-repeat: no-repeat;
            opacity: 0.9;
            text-align: center;
        }

        .masthead-brand {
            margin-top: 35px;
            font-style: oblique;
        }

        .main {
            overflow: scroll;
            height:fit-content;
        }

        .btn {
            background-color: transparent;
            border-color: darkgoldenrod;
            color: #271E1E;
            font-weight: bolder;
        }

        .container-head{
            height:fit-content;
            background-color: #271E1E;
            align-content: center;
        }

        .row{
            vertical-align: -webkit-baseline-middle;
        }



    </style>
</head>
<body>
<div class="main">
    <div class="jumbotron">
            <div class="card mx-auto" style="opacity: 0.9; margin-top: 20vh">
                <div class="container">
                        <div class="row">
                            <div class="col">
                                    <form action="#" method="post" novalidate="novalidate">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <h3>Search Restaurants</h3>
                                                    <hr>
                                                            <div class="row">
                                                                <label for="cuisine">Select Cuisine</label>
                                                                <select class="selectpicker ml-3" id="mealType" name="mealType" multiple data-live-search="true">
                                                                    <% for(var i=0; i<mealtype.length; i++) { %>
                                                                        <option><%= mealtype[i].mealtype%></option>
                                                                    <%}%>
                                                                </select>
                                                            </div>
                                                            <div class="row">
                                                            
                                                            <label for="mealType">Select Meal Type</label>
                                                            <select class="selectpicker ml-3" id="mealType" name ="cuisine" multiple data-live-search="true">
                                                                <% for(var i=0; i<cuisine.length; i++) { %>
                                                                    <option><%= cuisine[i].cuisine%></option>
                                                                <%}%>
                                                            </select>
                                                            </div>
                
                                                            <div class="row">
                                                            <label for="rating">Select Rating</label>
                                                            <select class="form-control search-slt" id="rating">
                                                                <option>1</option>
                                                                <option>2</option>
                                                                <option>3</option>
                                                                <option>4</option>
                                                                <option>5</option>
                                                            </select>
                                                        </div>
                                                </div>
                                                
                                            </div>
                                        <button type="submit" class="btn btn-primary">Search</button>
                                        </form>
                            </div>
                        </div>
                </div>
            </div>
    </div>

    
</div>

</body>

</html>
