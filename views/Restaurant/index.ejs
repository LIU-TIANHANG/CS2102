<!DOCTYPE html>
<html>
<head>
    <% include ../partials/home %>

    <style>
        .container{
            overflow: scroll;
        }

        .row{
            padding: 1%;
        }

        .jumbotron{
            width: 100%;
            height: 350px;
            background-image: url(https://images.pexels.com/photos/958545/pexels-photo-958545.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
            background-size:cover;
            background-repeat: no-repeat;
            opacity: 0.9;
            text-align: center;
        }

        .masthead-brand {
            margin-top: 135px;
            color: white;
            font-style: oblique;
        }

        .main {
            overflow: scroll;
            height:fit-content;
        }

        .btn {
            background-color: goldenrod;
            border-color: darkgoldenrod;
            color: #271E1E;
            font-weight: bolder;
        }

        .container-head{
            height:fit-content;
            background-color: #271E1E;
            align-content: center;
        }
    </style>
</head>
<body>
<h1>CS2102: <%= title%></h1>
<div class="main">
    <div class="jumbotron">
                <h1 class="masthead-brand mb-3">Restaurants</h1>
                <p class="text-center">
                <a href= "/restaurant/insert" class="btn btn-primary btn-lg" role="button" aria-pressed="true">Add new restaurant</a>
                </p>
    </div>
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Opening Hours</th>
                <th scope="col">Intro</th>
                <th scope="col">Contact</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
                <th scope="col">Modify availability</th>
                <th scope="col">Modify mealType</th>
                <th scope="col">Modify cuisine</th>
                <th scope="col">Modify Menu</th>
            </tr>
            </thead>
            <tbody>
            <% for(var i=0; i<data.length; i++) { %>
                <tr>
                    <td><%= data[i].resid%></td>
                    <td><%= data[i].rname%></td>
                    <td><%= data[i].openinghour%></td>
                    <td><%= data[i].intro%></td>
                    <td><%= data[i].contactno%></td>

                    <td>
                        <form action="/restaurant/update/<%= data[i].resid%>" method="get">
                            <button type="submit" class="btn btn-danger">Update</button>
                        </form>
                    </td>
                    <td>
                        <form action="/restaurant/delete/<%= data[i].resid %>" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                    <td>
                        <form action="/restaurant/availability/<%= data[i].resid %>" method="get">
                            <button type="submit" class="btn btn-primary">Availability</button>
                        </form>
                    </td>
                    <td>
                        <form action="/restaurant/meals/<%= data[i].resid %>" method="get">
                            <button type="submit" class="btn btn-primary">mealType</button>
                        </form>
                    </td>
                    <td>
                        <form action="/restaurant/cuisines/<%= data[i].resid %>" method="get">
                            <button type="submit" class="btn btn-primary">cuisine</button>
                        </form>
                    </td>
                    <td>
                        <form action="/restaurant/menu/<%= data[i].resid %>" method="get">
                            <button type="submit" class="btn btn-primary">menu</button>
                        </form>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>

</body>

</html>
