<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">openingHour</th>
        <th scope="col">Intro</th>
        <th scope="col">contact number</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
        <th scope="col">Add/change availability</th>
