            <td><%= data[0].contactno%></td>

            <td>
                <form action="/restaurant/update/<%= data[0].resid%>" method="get">
                    <button type="submit" class="btn btn-danger">Update</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/delete/<%= data[0].resid %>" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/availability/<%= data[0].resid %>" method="get">
                    <button type="submit" class="btn btn-primary">Availability</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/meals/<%= data[0].resid %>" method="get">
                    <button type="submit" class="btn btn-primary">mealType</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/cuisines/<%= data[0].resid %>" method="get">
                    <button type="submit" class="btn btn-primary">cuisine</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/menu/<%= data[0].resid %>" method="get">
                    <button type="submit" class="btn btn-primary">menu</button>
                </form>
            </td>
        </tr>

    </tbody>
