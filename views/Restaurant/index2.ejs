<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <form>
            <div class="form-group">
                <label for="staticEmail" class="col-sm-2 col-form-label">Restaurant Name</label>
                <div class="col-sm-10">
                    <%= data[0].rname%>
