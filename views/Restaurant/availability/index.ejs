<html>
<head>

    <!-- partials -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, shrink-to-fit=yes">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>CS2102 project</title>
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
     <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<!--CDN for plotlj-->
     <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>



     <nav class="navbar navbar-dark fixed-top" style="background-color:#271E1E;">
            <a class="navbar-brand" href="#" style="color:antiquewhite">CS2102 Project By Team 52</a>
            <a href="/redirect" class="btn btn-primary btn-lg mt-3" role="button" aria-pressed="true" style="background-color: gold">Return to Index</a>
        </nav>

    <style>
        .container{
            overflow: scroll;
        }

        .row{
            padding: 1%;
        }

        .jumbotron{
            width: 100%;
            height: 40vh;
            background-image: url(https://images.pexels.com/photos/34650/pexels-photo.jpg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);
            background-size:cover;
            background-repeat: no-repeat;
            opacity: 0.9;
            text-align: center;
        }

        .masthead-brand {
            margin-top: 10vh;
            color: white;
            font-style: oblique;
        }

        .main {
            overflow: scroll;
            height:fit-content;
        }

        .btn {
            background-color: bisque;
            border-color: darkgoldenrod;
            color: #271E1E;
            font-weight: bolder;
        }

        .container-head{
            height:fit-content;
            background-color: #271E1E;
            align-content: center;
        }

        .btn-toolbar{
            align-content: flex-start;
        }
    </style>

</head>
<body>

<div class="main">
    <div class="jumbotron">
        <h1 class="masthead-brand mb-3">Availability</h1>
        <p class="text-center">
            <a href= "/restaurant/availability/<%= id%>/insert" class="btn btn-primary" role="button" aria-pressed="true">Add new available slot</a>
        </p>

    </div>
    <div class="container">
        <div class="d-flex justify-content-end mb-3">
            <div class="btn-toolbar">
                    <button type="reset" class="btn btn-primary btn-lg mt-3 mr-1" role="button" onclick="history.back(-1)" aria-pressed="true">Back</button>
                    <button type="reset" class="btn btn-primary btn-lg mt-3" role="button" onclick="" aria-pressed="true" style="background-color: gold">Return to Index</button>
            </div>
        </div>
        
        <div class="row">
                
                <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">AID</th>
                            <th scope="col">Restaurant ID</th>
                            <th scope="col">Reservation Date</th>
                            <th scope="col">Start time</th>
                            <th scope="col">End time</th>
                            <th scope="col">Available Seats</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i=0; i<data.length; i++) { %>
                            <tr>
                                <td><%= data[i].aid%></td>
                                <td><%= data[i].resid%></td>
                                <td><%= date[i]%></td>
                                <td><%= data[i].timeavailablestart%></td>
                                <td><%= data[i].timeavailableend%></td>
                                <td><%= data[i].numseats%></td>
                                <td>
                                    <form action="/restaurant/availability/<%= data[i].resid%>/update/<%= data[i].aid%>" method="get">
                                        <button type="submit" class="btn btn-danger" style="background-color: transparent">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="/restaurant/availability/<%= data[i].resid%>/delete/<%= data[i].aid%>" method="get">
                                        <button type="submit" class="btn btn-danger" style="background-color: transparent">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
        </div>
        <!--<a href= "/reservation/insert" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add new reservation</a>-->
    </div>
</div>

</body>

</html>
