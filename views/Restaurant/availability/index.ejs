<body>
<h1>CS2102: <%= title%></h1>
<table class="table">
    <thead>
    <tr>
        <th scope="col">AID</th>
        <th scope="col">resID</th>
        <th scope="col">rdate</th>
        <th scope="col">Start time</th>
        <th scope="col">End time</th>
        <th scope="col">Available seats</th>
        <th scope="col">Update</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i=0; i<data.length; i++) { %>
        <tr>
            <td><%= data[i].aid%></td>
            <td><%= data[i].resid%></td>
            <td><%= date[i]%></td>
            <td><%= data[i].timeavailablestart%></td>
            <td><%= data[i].timeavailableend%></td>
            <td><%= data[i].numseats%></td>
            <td>
                <form action="/restaurant/availability/<%= data[i].resid%>/update/<%= data[i].aid%>" method="get">
                    <button type="submit" class="btn btn-danger ">Update</button>
                </form>
            </td>
            <td>
                <form action="/restaurant/availability/<%= data[i].resid%>/delete/<%= data[i].aid%>" method="get">
                    <button type="submit" class="btn btn-danger ">Delete</button>
                </form>
            </td>
        </tr>
    <% } %>
    </tbody>
</table>
<a href= "/restaurant/availability/<%= id%>/insert" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Add new available slot</a>

<div class="main">
    <div class="jumbotron">

        <h1 class="masthead-brand mb-3">Availability</h1>
        <p class="text-center">
            <a href= "/restaurant/availability/<%= id%>/insert" class="btn btn-primary" role="button" aria-pressed="true">Add new available slot</a>
        </p>

    </div>
    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">restaurant name</th>
                    <th scope="col">rdate</th>
                    <th scope="col">timeStart</th>
                    <th scope="col">timeend</th>
                    <th scope="col">numPeople</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i=0; i<data.length; i++) { %>
                    <tr>
                        <td><%= data[i].rname%></td>
                        <td><%= date[i]%></td>
                        <td><%= data[i].timeavailablestart%></td>
                        <td><%= data[i].timeavailableend%></td>
                        <td><%= data[i].numpeople%></td>
                        <td>
                            <form action="/reservation/update/<%= data[i].rsvid%>" method="get">
                                <button type="submit" class="btn btn-danger disabled">Update</button>
                            </form>
                        </td>
                        <td>
                            <form action="/reservation/delete/<%= data[i].aid %>/<%= data[i].userid %>" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
