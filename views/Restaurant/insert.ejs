<script>
    // populate time
    function populate(selector) {
        var select = $(selector);
        var hours, minutes, ampm;
        for(var i = 420; i <= 1320; i += 15){
            hours = Math.floor(i / 60);
            minutes = i % 60;
            if (minutes < 10){
