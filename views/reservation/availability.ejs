<!--home page of availability-->
<html>
<head>
    <% include ../partials/home %>

    <style>
        .container{
            overflow: scroll;
        }

        .row{
            padding: 1%;
        }

        .jumbotron{
            width: 100%;
            height: 300px;
            background-image: url(https://images.pexels.com/photos/541216/pexels-photo-541216.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500);
            background-size:cover;
            background-repeat: no-repeat;
            opacity: 0.9;
            text-align: center;
        }

        .masthead-brand {
            margin-top: 25px;
            color:#271E1E;
            font-style: oblique;
        }

        .main {
            overflow: scroll;
            height:fit-content;
        }

        .btn {
            background-image: linear-gradient(to right, #9B6C4D 0%, #ffe187 51%, #9B6C4D 100%);
            border-color: whitesmoke;
            color: #271E1E;
            font-weight: bolder;
        }

        .container-head{
            height:fit-content;
            background-color: #271E1E;
            align-content: center;
        }
    </style>
</head>
<body>
<h1>CS2102: <%= title%></h1>
<div class="main">
    <div class="jumbotron">
        <div class="card" style="background-color: aliceblue; opacity: 0.75">
            <h1 class="masthead-brand mb-3">Availability</h1>
            <div class="row">
                <div class="col"><hr></div>
                <div class="col-auto">Add an available time slot, or view all availability</div>
                <div class="col"><hr></div>
            </div>
        </div>

    </div>
    <div class="container">
            <div class="d-flex justify-content-end mb-3">
                    <div class="btn-toolbar">
                            <button type="reset" class="btn btn-primary btn-lg mt-3 mr-1" role="button" onclick="history.back(-1)" aria-pressed="true">Back</button>
                            <a href="/redirect" class="btn btn-primary btn-lg mt-3" role="button" aria-pressed="true" style="background-color: gold">Return to Index</a>
                    </div>
                </div>
        <form id="html_form" action="insert" role="form" method="post">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">rdate</th>
                    <th scope="col">Start time</th>
                    <th scope="col">End time</th>
                    <th scope="col">Available seats</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i=0; i<data.length; i++) { %>
                    <tr>
                        <td><%= date[i]%></td>
                        <td><%= data[i].timeavailablestart%></td>
                        <td><%= data[i].timeavailableend%></td>
                        <td><%= data[i].numseats%></td>
                        <td><input type="radio" name="aid" value="<%= data[i].aid%>"></td>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <label>Enter the number of attendance</label>
            <input type="number" name="seatNumber" id="seatNumber">
            <button>Submit</button>
        </form>
    </div>
</div>

</body>

</html>
