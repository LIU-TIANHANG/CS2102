<!DOCTYPE html>
<html>
<head>
    <% include ../partials/home %>
</head>
<body>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form action="#" method="post">
                <div class="form-group">
                    <label for="rname">Restaurant name</label>
                    <select id="rname" name="rname">
                        <% for(let i=0;i<data.length;i++){%>
                            <option value="<%= data[i].resid%>"><%= data[i].rname%></option>
                        <%}%>
                    </select>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <select id="rating" name="rating">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="review">Your review(limit 500 char)</label>
                    <textarea class="form-control" id="review" rows="3" name="review"  maxlength="499"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>
</body>
</html>
